{
  "private": true,
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp build & gulp imagemin",
    "editorconfig": "editorconfig-cli",
    "imagemin": "gulp imagemin",
    "prepare": "husky install",
    "start": "npm run prepare & cross-env NODE_ENV=development gulp start ",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss --color",
    "test": "npm run editorconfig & npm run stylelint & eslint source/js/",
    "validateHtmltest": "gulp validateHtmlBem --color",
    "webp": "gulp webp"
  },
  "lint-staged": {
    "*.{json,js,html,svg,sass,scss}": "editorconfig",
    "*.scss": "stylelint --syntax scss --color",
    "*.js": "eslint --color"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.x",
    "browser-sync": "^2.26.12",
    "eslint": "^7.28.0",
    "eslint-config-htmlacademy": "^4.0.2",
    "gulp-html-beautify": "^1.0.1",
    "gulp-html-bem-validator": "^1.0.5",
    "gulp-w3c-html-validator": "^2.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.x"
  },
  "dependencies": {
    "@babel/preset-env": "^7.14.5",
    "autoprefixer": "^9.5.x",
    "babel-loader": "^8.0.6",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "gulp": "^4.0.x",
    "gulp-csso": "^4.0.1",
    "gulp-file-include": "^2.3.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.x",
    "gulp-postcss": "^9.0.x",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.x",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-webp": "^4.0.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "normalize.css": "^8.0.1",
    "swiper": "^6.6.2",
    "webpack": "^5.39.1",
    "webpack-stream": "^6.1.2"
  }
}


